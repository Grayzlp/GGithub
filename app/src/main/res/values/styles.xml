<resources>

    <style name="GGithub" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:textColorHint">@color/hint_disabled_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="drawerArrowStyle">@style/Widget.GGithub.DrawerArrowStyle</item>
    </style>

    <style name="GGithub.UserActivity" parent="GGithub">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/darker_gray</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GGithub.RepoActivity" parent="GGithub">
    </style>


    <!-- text appearance style -->
    <style name="TextAppearance.DarkButton" parent="@android:style/TextAppearance.Material.Widget.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.FloatLabelHint" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textColor">?android:colorPrimary</item>
    </style>

    <style name="TextAppearance.ToolbarTitleSmallCaps" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextAppearance.ToolbarGrayTitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_tertiary_dark</item>
    </style>

    <style name="TextAppearance.Accent" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.Normal" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="TextAppearance.Detail" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_tertiary_dark</item>
    </style>

    <style name="TextAppearance.UserOverViewDataTitle" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_tertiary_dark</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/spacing_micro</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TextAppearance.UserOverViewData" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_tertiary_dark</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/spacing_micro</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TextAppearance.UserDetailDataTitle" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.UserDetailData" parent="TextAppearance.UserDetailDataTitle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_alignParentStart">false</item>
        <item name="android:layout_alignParentEnd">true</item>

    </style>

    <!-- drawer style -->
    <style name="Widget.GGithub.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/primary</item>
    </style>

    <!-- tool bar style -->
    <style name="Widget.GGithub" parent="android:Widget" />

    <style name="Widget.GGithub.Toolbar">
        <item name="android:titleTextAppearance">
            @android:style/TextAppearance.Material.Widget.ActionBar.Title
        </item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:elevation">@dimen/z_app_bar</item>
        <item name="android:theme">@style/GGithubDarkOverlay</item>
    </style>

    <style name="Widget.GGithub.Toolbar.HomeToolbar" parent="Widget.GGithub.Toolbar">
        <item name="background">@null</item>
        <item name="android:theme">@android:style/ThemeOverlay.Material.Light</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarGrayTitle</item>
    </style>

    <style name="Widget.GGithub.Toolbar.RepoToolbar" parent="Widget.GGithub.Toolbar">
        <item name="background">@null</item>
        <item name="android:theme">@android:style/ThemeOverlay.Material.Light</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarGrayTitle</item>
    </style>



    <!-- theme overlay use in action bar -->
    <style name="GGithubDarkOverlay" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar" />

    <style name="ExpandedFabTheme" parent="@android:style/ThemeOverlay.Material.Light">
        <item name="android:textColorPrimary">@color/dark_icon</item>
        <item name="android:textColorPrimaryDisableOnly">@color/dark_icon</item>
        <item name="android:colorControlActivated">@color/dark_icon</item>
    </style>

    <style name="TextAppearance.UserBio" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <style name="GGithub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="GGithub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
